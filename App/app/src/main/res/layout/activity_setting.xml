<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.pages.SettingActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_appbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_setting">

    </RelativeLayout>

    <include
        android:id="@+id/setting_appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_appbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Hello, Khoa!"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_setting_white"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/setting_ic_changePassword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_setting_change_password_icon"
                android:padding="8dp"
                android:src="@tools:sample/avatars"
                android:tint="#FDFDFD"
                app:srcCompat="@drawable/ic_change_password" />

            <TextView
                android:id="@+id/setting_changePasswordText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Change Password"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_setting_white"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/setting_ic_sign_out"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_setting_sign_out_icon"
                android:padding="8dp"
                android:src="@tools:sample/avatars"
                android:tint="#FDFDFD"
                app:srcCompat="@drawable/ic_sign_out" />

            <TextView
                android:id="@+id/setting_signOutText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Sign Out"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>