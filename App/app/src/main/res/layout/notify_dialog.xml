<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/schedule_input_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_change_password_dialog_header"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_change_password_dialog_body"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/notify_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="15sp"
            android:paddingEnd="10dp"
            android:paddingBottom="15sp"
            android:text="  D  e s  cription...Description...Description...Description...Description...Description...Description...Description..."
            android:textSize="16sp" />

        <Button
            android:id="@+id/schedule_info_input_dialog_closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2E3830"
            android:fontFamily="@font/montserrat_bold"
            android:text="Close"
            android:textSize="18sp"
            app:cornerRadius="15sp" />
    </LinearLayout>

</LinearLayout>